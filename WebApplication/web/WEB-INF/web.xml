<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>AddBlog</servlet-name>
        <servlet-class>AddBlog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewBlogs</servlet-name>
        <servlet-class>viewBlogs</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteBlog</servlet-name>
        <servlet-class>deleteBlog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateBlog</servlet-name>
        <servlet-class>updateBlog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delete1Blog</servlet-name>
        <servlet-class>delete1Blog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>update1Blog</servlet-name>
        <servlet-class>update1Blog</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBlog</servlet-name>
        <url-pattern>/AddBlog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewBlogs</servlet-name>
        <url-pattern>/viewBlogs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteBlog</servlet-name>
        <url-pattern>/deleteBlog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateBlog</servlet-name>
        <url-pattern>/updateBlog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delete1Blog</servlet-name>
        <url-pattern>/delete1Blog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>update1Blog</servlet-name>
        <url-pattern>/update1Blog</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>viewBlogs.jsp</welcome-file>
    </welcome-file-list>
</web-app>
